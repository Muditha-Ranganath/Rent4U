<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idRLBSheet"
    android:background="@color/blue_shade_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle Name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/idTVCourseName"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/idIVCourse"
        android:layout_below="@+id/idTVCourseName"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idTVDescription"
        android:layout_below="@+id/idTVCourseName"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/idIVCourse"
        android:padding="3dp"
        android:text="Description"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idTVSuitedFor"
        android:layout_below="@+id/idTVDescription"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/idIVCourse"
        android:padding="3dp"
        android:text="Excess Mileage"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idTVPrice"
        android:layout_below="@+id/idTVSuitedFor"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/idIVCourse"
        android:padding="3dp"
        android:text="Per Day (80KM)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/idIVCourse"
        >
        <Button
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Edit Vehicle"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/idBtnEdit"/>

        <Button
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="View Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/idBtnViewDetails"/>
    </LinearLayout>
</RelativeLayout>